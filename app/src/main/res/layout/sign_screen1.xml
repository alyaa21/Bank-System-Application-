<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bank4"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/bicon"
         />

    <ImageButton
        android:layout_width="81dp"
        android:layout_height="74dp"

        android:layout_marginLeft="300dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/circle_button"
        android:text="Amount"
        android:id="@+id/check_money"
        android:src="@drawable/ic_account_circle"

        />
    <ImageButton
        android:layout_width="81dp"
        android:layout_height="74dp"
        android:layout_marginTop="40dp"

        android:layout_marginRight="15dp"
        android:background="@drawable/circle_button"

        android:id="@+id/send_money"
        android:textColor="@color/black"

        android:src="@drawable/ic_send_mon"
        android:layout_marginLeft="300dp"

        />

    <ImageButton
        android:id="@+id/RequestLoanSc"
        android:layout_width="81dp"
        android:layout_height="74dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/circle_button"
        android:src="@drawable/ic_loan"



        />

    <ImageButton
        android:layout_width="81dp"
        android:layout_height="74dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/circle_button"

      android:src="@drawable/ic_chat_customer"


        />



</LinearLayout>